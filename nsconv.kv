<NsConv>
    butt_ascii: butt_ascii
    butt_clear: butt_clear
    inp: cti.inp
    cti: cti
    outres: outres
    out: outres.out
    val_inpsys: tbg_from.val
    val_outsys: tbg_to.val
    tbg_from: tbg_from
    tbg_to: tbg_to
#    lb_debug: lb_debug
    canvas:
        Color:
            rgb: (0,0,.2)
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'
#    padding: padding_left=20, padding_top=20, padding_right=5, padding_bottom=20
    padding: [dp(20), dp(5), dp(5), dp(20)]
    spacing: dp(5)
#    size_hint_y: .6
    pos_hint: {'top': 1}
    outsys_name: 'Outsys'
    CaptTextInput:
        id: cti
        inp: root.inp
        size_hint_y: .2
#    BLabel:
#        id: lb_debug
##        font_size: 20
##        text: 'debug_info'
#        size_hint_y: None
#        height: self.texture_size[1] + 4
#        valign: 'middle'
#        on_touch_down: print(app.root.size)
    LabelRes:
        id: outres
        out: root.out
        size_hint_y: .2
    BoxLayout:
#        canvas:
#            Color:
#                rgb: (1,1,1)
#            Line:
#                rectangle: (self.x, self.y, self.width, self.height)
        orientation: 'horizontal'
        size_hint_y:.1
        Button:
            id: butt_clear
            text: 'Очистить'
            on_press: root.clr()
#            on_release: app.root.ctb_released()
        CToggButt:
            id: butt_ascii
            text: 'ASCII -> ' + str(root.val_outsys)
            group: 'inpsys'
            val: 0xFFFF
            on_state: root.val_inpsys = self.val
    ToggButtGroup:
        id: tbg_from
        capt: 'Из'
        group: 'inpsys'
        val: root.val_inpsys
        size_hint_y: .2

    ToggButtGroup:
        id: tbg_to
        capt: 'В'
        group: 'outsys'
        val: root.val_outsys
        size_hint_y: .2
    Widget:
#        canvas:
#            Color:
#                rgb: (0,0,.2)
#            Rectangle:
#                size: self.size
#                pos: self.pos
        size_hint: None, .6

