<Border@Widget>
    canvas:
        Color:
            rgb: (1, 1, 0)
        Line:
            rectangle: (self.x, self.y, self.width, self.height)

<Border2@Widget>
    canvas:
        Color:
            rgb: (0,1,1)
        Line:
            rectangle: (self.x+1, self.y+1, self.width-2, self.height-2)

<Border3@Widget>
    canvas:
        Color:
            rgb: (1,0,1)
        Line:
            rectangle: (self.x+1, self.y+1, self.width-2, self.height-2)

<Delim@Widget>
    canvas:
        Color:
            rgb: (.3,.3,.3)
        Line:
            points: (self.x+1, self.y+1, self.width-2, self.y+1)
    size: 200, 2
#    height: self.minimum_height